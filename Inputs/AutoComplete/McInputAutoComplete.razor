@namespace MC.Blazor

@using Microsoft.AspNetCore.Components.Forms

@inherits McInputAutoCompleteBase

<div class="position-relative @CssClass">
    <input class="@InputCssClass w-100" id="@Id" @bind-value="@CurrentValue" @bind-value:event="oninput" @onkeyup="@(() => OnTextChangedVoid(CurrentValue))"/>
    <button type="button" class="btn btn-link text-danger btn-sm position-absolute" title="حذف" style="top: 3px;left: 1px;padding: 5px;"><i class="fas fa-times-circle"></i></button>
</div>
@if (Items != null)
{
    <ul>
        @foreach (var item in Items)
        {
            <li>@item.Value</li>
        }
    </ul>
}