@namespace MC.Blazor

@using Microsoft.AspNetCore.Components.Forms

@inherits McInputAutoCompleteBase

<McInputAutoCompleteStyle/>

<div class="position-relative @CssClass" @onfocusout="OnLostFocus">
    <input class="@InputCssClass w-100" id="@Id" @bind-value="@CurrentValue" @bind-value:event="oninput" @onkeyup="@(() => OnTextChangedVoid(CurrentValue))" />
    <button type="button" class="btn btn-link text-danger btn-sm position-absolute @(SelectedId == null ? "d-none" : null)" title="حذف" style="top: 3px;left: 1px;padding: 5px;"><i class="fas fa-times-circle"></i></button>
    @if (Items != null)
    {
        <ul class="mc-autocomplete-list">
            @foreach (var item in Items)
            {
                <li @onclick="@(() => OnSelected(item.Value))">@item.Value</li>
            }
        </ul>
    }
</div>
